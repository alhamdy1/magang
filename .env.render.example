# Environment Variables untuk Render.com
# Copy nilai-nilai ini ke Render Dashboard â†’ Environment

# Aplikasi
APP_NAME="Sistem Perizinan Reklame"
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:YOUR_GENERATED_KEY_HERE
APP_LOCALE=id
APP_TIMEZONE=Asia/Jakarta

# Database (SQLite untuk testing, PostgreSQL untuk production)
DB_CONNECTION=sqlite

# Untuk PostgreSQL (jika menggunakan Render PostgreSQL):
# DB_CONNECTION=pgsql
# DATABASE_URL=your_postgres_connection_string

# Session & Cache
SESSION_DRIVER=database
CACHE_STORE=database
QUEUE_CONNECTION=database

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Port (Render sets this automatically)
PORT=8080
