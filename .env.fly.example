# Environment Variables untuk Fly.io
# Set secrets dengan: fly secrets set APP_KEY=base64:xxxxx

# Aplikasi
APP_NAME="Sistem Perizinan Reklame"
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:YOUR_GENERATED_KEY_HERE
APP_LOCALE=id
APP_TIMEZONE=Asia/Jakarta

# Database (SQLite untuk testing)
DB_CONNECTION=sqlite

# Untuk PostgreSQL (fly postgres create):
# DB_CONNECTION=pgsql
# DATABASE_URL=postgres://user:pass@host:5432/db

# Session & Cache
SESSION_DRIVER=database
CACHE_STORE=database
QUEUE_CONNECTION=database

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error
